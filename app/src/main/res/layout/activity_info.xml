<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/title_apresentacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apresentação"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_apresentacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_institution"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_alunos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_students"
                android:textColor="?attr/colorOnBackground" />

            <ImageView
                android:layout_width="380dp"
                android:layout_height="250dp"
                android:src="@drawable/teste_rsrs" />

            <TextView
                android:id="@+id/title_geral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\nVisão Geral"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_geral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_project_overview"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_geral2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_project_overview2"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_tecnologias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tecnologias e Ferramentas"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_tecnologias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_technologies"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_arquitetura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arquitetura"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_arquitetura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_architecture"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_modelagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modelagem de Dados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_modelagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_data_modeling"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comunicação com API"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_api"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_networking"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_persistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Persistência de Dados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_persistencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_persistence"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Interface do Usuário"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_ui"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_ui"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_funcionalidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Funcionalidades"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_funcionalidades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_features"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/title_pacotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estrutura de Pacotes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/text_pacotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_package_structure"
                android:textColor="?attr/colorOnBackground" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
